{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",

        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,

        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "declaration": true,
        "removeComments": false,

        "strict": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "./src/**/*.test.ts",
        "./src/**/*.test.mts"
    ]
}